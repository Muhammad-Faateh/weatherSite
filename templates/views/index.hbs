<!DOCTYPE html>
<html lang="en">

<head>
    {{> header}}
</head>

<body>
    <!-- navbar start  -->
    {{> navbar}}
    <!-- navbar end -->

    <!-- main part start  -->
    <div class="container">
        <div class="row mainbody">
            <div class="col-md-6 col-12 mainbody-left-side animate__animated animate__fadeInLeft">
                <p>Welcome to weather app</p>
                <h1>Get the lastest <span>Weather</span> info of your city</h1>
                <button type="button" class="btn" id="clicknow">Click now</button>
            </div>
            <div class=" col-md-6 col-12 mainbody-right-side">
                <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="../public/images/bg1.png" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="../public/images/bg2.png" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="../public/images/bg3.png" alt="Third slide">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- main part end  -->

    <!-- footer start  -->
    {{> footer}}

    <!-- footer end  -->


    <script src="../../public/js/events.js"></script>

</body>

</html>